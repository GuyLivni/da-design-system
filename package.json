{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12.13.0"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "tailwind-config-viewer": "tailwind-config-viewer -o"
  },
  "peerDependencies": {
    "@types/react": ">= 16",
    "@types/styled-components": "^5.1.4",
    "react": ">=16",
    "styled-components": "^5.2.0",
    "twin.macro": "^2.0.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "yarn lint --cache --fix",
      "yarn test --findRelatedTests"
    ],
    "*.{js,ts,jsx,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "babelMacros": {
    "twin": {
      "config": "tailwind.config.js",
      "preset": "styled-components",
      "autoCssProp": true,
      "hasSuggestions": true,
      "includeClassNames": true
    }
  },
  "jest": {
    "transform": {
      "^.+\\.[jt]sx?$": "<rootDir>/jest-preprocess.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  },
  "name": "da-design-system",
  "author": "Guy Livni",
  "module": "dist/da-design-system.esm.js",
  "size-limit": [
    {
      "path": "dist/da-design-system.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/da-design-system.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.12.17",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@storybook/addon-essentials": "^6.1.18",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.18",
    "@storybook/addons": "^6.1.18",
    "@storybook/react": "^6.1.18",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/styled-components": "^5.1.7",
    "autoprefixer": "^9",
    "babel-loader": "^8.2.2",
    "babel-plugin-macros": "^3.0.1",
    "chromatic": "^5.6.3",
    "husky": "4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^10.5.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "size-limit": "^4.9.2",
    "styled-components": "^5.2.1",
    "tailwind-config-viewer": "^1.5.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "twin.macro": "^2.2.3",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "core-js": "^3.9.0",
    "tailwindcss": "^2.0.3"
  }
}
